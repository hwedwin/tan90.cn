<div class="container">
  <% @cities.each do |country, cities| %>
    <div class="clearfix">
      <h2 class="city-title"><%= FishtripSeo::COUNTRY[country] %>热门民宿</h2>
      <% cities.each do |city| %>
        <div class="col-xs-12 col-sm-6 col-md-4 cus-padding">
          <div class="thumbnail" style="margin-bottom:5px">
            <a href="/fishtrip/<%= "#{country}/#{city.name_en}" %>/" target="_blank">
              <img src="<%= city.img %>">
            </a>
            <div class="caption">
              <p class="hotel-name">
              <a href="/fishtrip/<%= "#{country}/#{city.name_en}" %>/" target="_blank">
                <%= city.name %>
              </a>
              <p class="city-minsu">共有<%= city.number_of_hotels %>家民宿</p>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<footer class="common">
  <div class="container seo-area">
    <% if @booking_hot_destinations %>
      <% @booking_hot_destinations.each do |destination| %>
        <div class="hot-cities clearfix">
          <h3 class="head"><%= destination[:title] %></h3>
          <ul>
            <% destination[:links].each_slice(11) do |sli| %>
              <% sli.each do |link| %>
                <li>
                  <p class="hot-link"> <a href="<%= link[:link] %>"><%= link[:text] %>酒店</a></p>
                  <p class="hot-desc"><%= link[:addition] %></p>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <hr>
      <% end %>
    <% end %>
    <%= render 'layouts/friendlinks' %>
  </div>
</footer>

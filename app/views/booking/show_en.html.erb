<article class="container cus-padding">
  <div class="col-md-6 cus-padding" id="desc">
    <div class="thumbnail">
      <a href="<%= booking_path(@hotel) %>/">
        <img src="<%= @hotel.photo_url %>" alt="<%= "Image of #{@hotel.name}" %>">
      </a>
    </div>
    <div class="isr" >
      <h2 class="itr-head"><a href="<%= booking_path(@hotel) %>/"><%= @hotel.name %></a>
        <span class="price pull-right">￥<%= @hotel.minrate %></span>
      </h2>
      <p style="padding-left:10px;"><%= @hotel.desc_en %></p>
      <div class="ratings">
        <p class="pull-right"><%= @hotel.review_score %>分</p>
        <p>
        <% if @hotel.review_score.nil? %>
          <% 5.times do %> <span class="glyphicon glyphicon-star-empty"></span> <% end %>
        <% else %>
          <% review_score=(@hotel.review_score/2).to_i+1 %>
          <% review_score.times { %><span class="glyphicon glyphicon-star"></span><% } %>
        <% end %>
        </p>
      </div>
    </div>
    <div class="sider-bar">
      <p>
      <a class="btn btn-info" href="<%= booking_path(@hotel) %>/">Select your rooms</a>
      <a class="btn btn-warning pull-right" href="<%= booking_path(@hotel) %>/">View Detail</a>
      </p>
    </div>
  </div>
  <div class="col-md-6 cus-padding" >
    <div class="comment">
      <h3 class="comment-title">Newest Reviews for <%= @hotel.name %></h3>
    </div>
    <hr>
    <% @comments.each do |comment| %>
      <div class="isr ratings">
        <% if comment.score.nil? %>
          <% 5.times do %> <span class="glyphicon glyphicon-star-empty"></span> <% end %>
        <% else %>
          <% comment_score = (comment.score.to_i/2).to_i %>
          <% comment_score.times { %><span class="glyphicon glyphicon-star"></span><% } %>
        <% end %>
        <%= comment.score %> from <span class="author"><%= comment.author %></span>
        <span class="pull-right"><%= comment.comment_time %></span>
        <p class="content"><%= comment.good %> </p>
      </div>
    <% end %>
  </div>
  </div>
</article>
<%= render 'footer_en' %>

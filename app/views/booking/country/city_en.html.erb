<article class="container">
  <div class="row description"><%= @location.hotels.count %> hotels totally in <%= @location.name %></div>
  <div class="row" id="hotel-list">
    <%= render partial: 'hotel_en', collection: @hotels, as: :hotel %>
  </div>
  <% if @hotels.size == Settings.kaminari_perpage %>
    <nav id="pagination">
      <ul class="pager">
        <li class="next"><a data-page='2'>Next<span aria-hidden="true">&rarr;</span></a></li>
      </ul>
    </nav>
  <% end %>
</article>
<%= render "booking/footer_en" %>

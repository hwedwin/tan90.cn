<footer class="container-fluid footer">
  <div class="row">
    <div class="col-md-12 col-md-offset-2">
      <% @footer_links.each do |country, links| %>
        <ul>
          <li><p class="head">更多<%= FishtripSeo::COUNTRY[country] %>民宿</p></li>
          <% links.each_slice(10) do |sli| %>
            <% sli.each do |link| %>
              <li class="inner"><p><a class="footer-link" href="<%= link['uri'] %>"><%= link['text'] %></a></p></li>
            <% end %>
            <div class="clearfix"></div>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class='col-md-12'>
      <p class="copy">Copyright © tan90.cn 2014-<%= Time.now.strftime("%Y") %> All Rights Reserved </p>
    </div>
  </div>
</footer>

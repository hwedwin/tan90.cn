<footer class="common">
  <div class="container seo-area">
    <% if @booking_hot_destinations %>
      <% @booking_hot_destinations.each do |destination| %>
        <div class="hot-cities clearfix">
          <h3 class="head"><%= destination[:title] %></h3>
          <ul>
            <% destination[:links].each_slice(11) do |sli| %>
              <% sli.each do |link| %>
                <li>
                  <p class="hot-link"> <a href="<%= link[:link] %>"><%= link[:text] %>酒店</a></p>
                  <p class="hot-desc"><%= link[:addition] %></p>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <hr>
      <% end %>
    <% end %>
    <%= render 'layouts/friendlinks' %>
  </div>
</footer>

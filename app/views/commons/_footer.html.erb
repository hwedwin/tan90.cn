<footer class="container-fluid footer">
  <% if @fishtrip_links %>
    <% @fishtrip_links.each do |country, links| %>
      <section class="col-md-12 col-md-offset-1">
        <ul>
          <li><p class="head"><%= FishtripSeo::COUNTRY[country] %>特色民宿</p></li>
          <% links.each_slice(11) do |sli| %>
            <% sli.each do |link| %>
              <li class="inner"><p><a class="footer-link" href="<%= link['uri'] %>"><%= link['text'] %></a></p></li>
            <% end %>
            <div class="clearfix"></div>
          <% end %>
        </ul>
      </section>
    <% end %>
  <% end %>
  <% if @booking_hot_destinations %>
    <section class="col-md-12 col-md-offset-1">
      <ul>
        <% @booking_hot_destinations.each do |destination| %>
          <li><p class="head"><%= destination[:title] %></p></li>
          <% destination[:links].each_slice(11) do |sli| %>
            <% sli.each do |link| %>
              <li class="inner"><p class="hot-link"><a href="<%= link[:link] %>"><%= link[:text] %>酒店</a></p>
                <p><span class="hot-desc"><%= link[:addition] %></span></p></li>
            <% end %>
            <div class="clearfix"></div>
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>
  <div class='col-md-12'>
    <p class="copy">Copyright © tan90.cn 2014-<%= Time.now.strftime("%Y") %> All Rights Reserved </p>
  </div>
</footer>

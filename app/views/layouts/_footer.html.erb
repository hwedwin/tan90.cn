<footer class="footer">
  <div class="container seo-area">
    <%= render 'fishtrip_comments/comment' %>
    <% if @footer_links and !@footer_links.empty? %>
      <% @footer_links.each do |country, links| %>
        <div class="recom-links clearfix">
          <h3 class="head"><%= FishtripSeo::COUNTRY[country] %>特色民宿</h3>
          <ul>
            <% links.each_slice(12) do |sli| %>
              <% sli.each do |link| %>
                <li class="inner"><a class="footer-link" href="<%= link['uri'] %>"><%= link['text'] %></a></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
    <p class="copy">Copyright ©timlentse.com 2015-<%= Time.now.strftime("%Y") %> All Rights Reserved</p>
  </div>
</footer>

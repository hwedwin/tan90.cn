<% if @is_mobile %>
  <div class="container footer">
    <p class="copy">Copyright © tan90.cn 2014-<%= Time.now.strftime("%Y") %> All Rights Reserved </p>
  </div>
<% else %>
  <div class="container-fluid split"></div>
  <footer class="container-fluid footer">
    <div class="row">
      <div class="col-md-12 col-md-offset-1">
        <% if @hot_destination %>
          <ul>
            <% @hot_destination.each do |destination| %>
              <li><p class="head"><%= destination[:title] %></p></li>
              <% destination[:links].each_slice(11) do |sli| %>
                <% sli.each do |link| %>
                  <li class="inner"><p class="hot-link"><a href="<%= link[:link] %>"><%= link[:text] %>酒店</a></p>
                    <p><span class="hot-desc"><%= link[:addition] %></span></p></li>
                <% end %>
                <div class="clearfix"></div>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class='col-md-12'>
        <p class="copy">Copyright © tan90.cn 2014-<%= Time.now.strftime("%Y") %> All Rights Reserved </p>
      </div>
    </div>
  </footer>
<% end %>

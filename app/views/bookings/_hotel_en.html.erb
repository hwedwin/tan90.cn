<% location_name = @location.name %>
<% @hotels.each_with_index do |hotel, ix| %>
  <div class="hotel-item clearfix">
    <div class="hotel-pic"> 
      <a href="/booking/<%= hotel.id %>/" target="_blank">
        <img class="hotel-img" src="<%= hotel.photo_url %>" alt="Images of <%= location_name %> hotels - <%= ix+1 %>">
      </a>
    </div>
    <div class="hotel-body">
      <p class="hotel-name">
      <a href="/booking/<%= hotel.id %>/" target="_blank">
        <%= hotel.name %>
      </a>
      </p>
      <p class="location"><strong><%="location:"%></strong><%= location_name %></p>
      <p class='address'><strong><%= "address:" %></strong><%= hotel.address %></p>
      <p class="hotel-desc hidden-xs">Introduction of <%= "#{hotel.name}: #{hotel.desc_en}" %></p>
      <% if @comments[hotel.id] %>
        <p class="hotel-comment hidden-xs">reviews:<%= @comments[hotel.id] %></p>
      <% end %>
      <% if hotel.minrate.nil? %>
        <p class="booking"><a href="/booking/<%= hotel.id %>/" target="_blank" class="btn btn-primary btn-xs" role="button">View detail</a> 
      <% else %>
        <p class="booking"> 
        <a class="btn btn-success pull-right" href="/booking/<%= hotel.id %>/" target="_blank">Select your room</a>
        <strong class="price"><%= hotel.minrate %></strong><span class="cy-code"><%= hotel.currencycode %></span>
        </p>
      <% end %>
    </div>
  </div>
<% end %>


<% @hotels.each_with_index do |hotel, ix| %>
  <div class="hotel-item clearfix">
    <div class="hotel-pic">
      <a href="<%= hotel.hotel_url %>?aid=897435" rel="nofollow" target="_blank">
        <img class="hotel-img" src="<%= hotel.photo_url %>" alt="<%= @city.name_cn %>酒店图片_<%= ix %>">
      </a>
    </div>
    <div class="hotel-body">
      <a href="<%= hotel.hotel_url %>?aid=897435" rel='nofollow' target="_blank">
        <p class="hotel-name"><%= hotel.name_cn %></p>
      </a>
      <% hotel_comments = @reviews[hotel.id] %>
      <% if hotel_comments %>
        <ul>
          <% hotel_comments.each do |comment| %>
            <li><p class="hotel-comment"><%= comment[0].empty? ? comment[1] : comment[0] %></p></li>
          <% end %>
        </ul>
      <% end %>
      <% if hotel.minrate==0 %>
        <p class="booking pull-right"><a href="<%= hotel.hotel_url %>?aid=897435" target="_blank"  rel='nofollow' class="btn btn-warning" role="button">查看详情</a> 
      <% else %>
        <p class="booking">
        <strong class="price">￥<%= hotel.minrate %></strong>/晚
        <a href="<%= hotel.hotel_url %>?aid=897435" target="_blank" class="btn btn-warning pull-right" rel='nofollow' role="button">预订</a> 
        </p>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>

<footer class="footer">
  <div class='container seo-area'>
    <% if @landmarks and !@landmarks.empty? %>
      <div id="landmarks" class="clearfix">
        <h3 class='head'>Hot landmarks in <%= @city.name %></h3>
        <ul>
          <% @landmarks.each do |landmark| %>
            <li><p class="landmark"><a href="<%=landmark[:url] %>"><%= landmark[:text] %></a></p></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% if @airports and !@airports.empty? %>
      <div id="airports" class="clearfix">
        <h3 class='head'>Airports in <%= @city.name %></h3>
        <ul>
          <% @airports.each do |airport| %>
            <li><p class="landmark"><a href="<%=airport[:url] %>"><%= airport[:text] %></a></p></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <% if @city %>
      <div class="clearfix">
        <p class='pull-right'><a href="/booking/<%= @city.country_code %>/<%= @city.full_name %>/review.html">Hotel reviews in <%= @city.name %></a></p>
      </div>
    <% end %>
  </div>
</footer>

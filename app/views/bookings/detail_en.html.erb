<article class="container cus-padding">
  <div class="col-md-6 cus-padding" id="desc">
    <div class="thumbnail">
      <a href="<%= @hotel.hotel_url %>?aid=897435" rel="nofollow">
        <img src="<%= @hotel.photo_url %>" alt="<%= "Image of #{@hotel.name}" %>">
      </a>
    </div>
    <div class="isr" >
      <h2 class="itr-head"><a href="<%= @hotel.hotel_url %>?aid=897435" rel="nofollow"><%= @hotel.name %></a>
        <span class="price pull-right">ï¿¥<%= @hotel.minrate %></span>
      </h2>
      <p style="padding-left:10px;"><%= @hotel.desc_en %></p>
      <div class="ratings">
        <p class="pull-right"><a href="<%= @hotel.hotel_url %>?aid=897435" rel="nofollow"><%= @hotel.review_score %></a></p>
        <p>
        <% if @hotel.review_score.nil? %>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% else %>
          <% @hotel.review_score.to_i.times{ %>
            <span class="glyphicon glyphicon-star"></span>
          <% } %>
          <% if (@hotel.review_score-@hotel.review_score.to_i)>0 %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        <% end %>
        <%= @hotel.review_score %>
        </p>
      </div>
    </div>
    <div class="sider-bar">
      <p>
      <a class="btn btn-info" href="<%= @hotel.hotel_url %>?aid=897435" rel='nofollow'>Select your rooms</a>
      <a class="btn btn-warning pull-right" href="<%= @hotel.hotel_url %>?aid=897435" rel="nofollow">View Detail</a>
      </p>
    </div>
  </div>
  <div class="col-md-6 cus-padding" >
    <div class="comment">
      <h3 class="comment-title">Newest Reviews for <%= @hotel.name %></h3>
    </div>
    <hr>
    <% @comments.each do |comment| %>
      <div class="isr ratings">
        <% if comment.score.nil? %>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
          <span class="glyphicon glyphicon-star-empty"></span>
        <% else %>
          <% comment.score.to_i.times{ %>
            <span class="glyphicon glyphicon-star"></span>
          <% } %>
          <% if (comment.score-comment.score.to_i)>0 %>
            <span class="glyphicon glyphicon-star-empty"></span>
          <% end %>
        <% end %>
        <%= comment.score %> from <span class="author"><%= comment.author %></span>
        <span class="pull-right"><%= comment.comment_time %></span>
        <p class="content"><%= comment.good %> </p>
      </div>
    <% end %>
  </div>
  </div>
</article>
<%= render 'footer_en' %>
